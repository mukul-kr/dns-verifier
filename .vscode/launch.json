    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file (with txt)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "-i", "txt",
                "-f", "./inputs/sample.txt",
                "-o", "yml",
                "-O", "./outputs/sample.yml",
                "-t", "3",
                "-T", "3"
            ]
        },

        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}